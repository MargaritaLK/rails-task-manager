  <%= form_for(task) do |t| %>
    <div class="form-group">
      <%= t.label :title %>
      <%= t.text_field :title %>
    </div>

    <div class="form-group">
      <%= t.label :details %>
      <%= t.text_field :details %>
    </div>

    <div class="form-group">
      <%= t.label "task completed?" %> <br />
      <%= t.check_box :completed %> <br />
    </div>

    <%= t.submit class: 'btn btn-primary' %>
  <% end %>

